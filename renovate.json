{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
    "**/ui/**",
    "**/.devcontainer/**"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "build-images.sh"
      ],
      "matchStrings": [
        "docker\\.io/zammad/zammad-docker-compose:(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "zammad/zammad-docker-compose"
    },
    {
      "customType": "regex",
      "fileMatch": ["build-images.sh"],
      "matchStrings": ["docker\\.io/postgres:(?<currentValue>[-0-9\\.a-z]+)"],
      "datasourceTemplate": "docker",
      "depNameTemplate": "postgres"
    },
    {
      "customType": "regex",
      "fileMatch": ["build-images.sh"],
      "matchStrings": ["docker\\.io/bitnami/elasticsearch:(?<currentValue>[-0-9\\.a-z]+)"],
      "datasourceTemplate": "docker",
      "depNameTemplate": "bitnami/elasticsearch"
    },
    {
      "customType": "regex",
      "fileMatch": ["build-images.sh"],
      "matchStrings": ["docker\\.io/redis:(?<currentValue>[^\\s]+)"],
      "datasourceTemplate": "docker",
      "depNameTemplate": "redis"
    },
    {
      "customType": "regex",
      "fileMatch": ["build-images.sh"],
      "matchStrings": ["docker\\.io/memcached:(?<currentValue>[^\\s]+)"],
      "datasourceTemplate": "docker",
      "depNameTemplate": "memcached"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "zammad/zammad-docker-compose"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<build>\\d+)"
    },
    {
      "matchPackageNames": ["postgres"],
      "allowedVersions": "< 16"
    },
    {
      "matchPackageNames": ["bitnami/elasticsearch"],
      "allowedVersions": "< 9"
    },
    {
      "matchPackageNames": ["redis"],
      "allowedVersions": "< 8",
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<compatibility>\\d+)"
    },
    {
      "matchPackageNames": ["memcached"],
      "allowedVersions": "< 2",
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<compatibility>\\d+)"
    }
  ]
}
